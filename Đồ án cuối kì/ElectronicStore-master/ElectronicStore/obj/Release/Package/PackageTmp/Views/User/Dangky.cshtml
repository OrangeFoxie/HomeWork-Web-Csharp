@model ElectronicStore.Models.KHACHHANG

@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<table align="center">
    <h2 style="text-align:center">Đăng Ký</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên khách hàng: </td>
            <td>
                @Html.TextBox("HotenKH")
                @ViewData["loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập : </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu : </td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu nhập lại : </td>
            <td>
                @Html.Password("Matkhaunhaplai")
                @ViewData["loi4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Email : </td>
            <td>
                @Html.TextBox("Email")
                @ViewData["loi5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Điện thoại  : </td>
            <td>
                @Html.TextBox("DienThoai")
                @ViewData["loi6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ  : </td>
            <td>
                @Html.TextBox("Diachi")
                @ViewData["loi7"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Ngày Sinh :</td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng Ký" style="font:Bold" class="btn btn-danger"/>
            </td>
        </tr>
    }
</table>
