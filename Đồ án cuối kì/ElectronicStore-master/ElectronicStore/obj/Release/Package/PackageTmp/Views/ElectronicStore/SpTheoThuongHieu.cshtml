@model IEnumerable<ElectronicStore.Models.SP>
@{
    ViewBag.Title = "SpTheoThuongHieu";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<!-- store products -->
<div class="row">
    <!-- product -->
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-xs-6">

            <div class="product">
                <div class="product-img" style="text-align:center">
                    <a href="@Url.Action("Details","ElectronicStore", new {id = item.MaSP } )">
                        <img src="~/Images/@item.HinhSP" alt= "" width="263px" height="263px">
                </div>
                <div class="product-body">
                    <p class="product-category">Category</p>
                    <h3 class="product-name"><a href="#">@item.TenSP</a></h3>
                    <h4 class="product-price">@item.GiaBan </h4>
                    <div class="product-rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </div>
                    <div class="product-btns">
                        <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                        <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">add to compare</span></button>
                        <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>
                    </div>
                </div>
                <div class="add-to-cart">
                    <a href="@Url.Action("ThemGiohang","GioHang",new { @iMaSP=@item.MaSP, @strURL=Request.Url.ToString()})">
                        <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>
                    </a>
                </div>
            </div>
        </div>
    }
</div>
<!-- /store products -->
<div class="store-filter clearfix">
    <ul class="store-pagination">
        <li class="active">1</li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
    </ul>
</div>
